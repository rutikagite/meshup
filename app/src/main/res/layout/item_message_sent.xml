<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="end">

    <!-- Spacer to push message to the right -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Message Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:orientation="vertical"
        android:background="@drawable/message_sent_background"
        android:padding="12dp"
        android:layout_marginBottom="4dp">

        <!-- Message Text -->
        <TextView
            android:id="@+id/textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a sent message"
            android:textSize="16sp"
            android:textColor="@color/message_sent_text"
            android:lineSpacingExtra="2dp" />

        <!-- Time -->
        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textSize="12sp"
            android:textColor="@color/message_sent_time"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:layout_gravity="end" />

    </LinearLayout>

</LinearLayout>